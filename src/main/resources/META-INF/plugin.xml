<idea-plugin>
    <id>astrid</id>
    <name>astrid</name>
    <vendor email="zarina.kurbatova@gmail.com">
    </vendor>

    <description><![CDATA[
    <p>An IntelliJ IDEA plugin that allows to get suggestions for better method names</p>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>actions.SuggestionIntentionAction</className>
            <category>Suggestions list</category>
            <descriptionDirectoryName>SuggestionRequestAction</descriptionDirectoryName>
        </intentionAction>
        <inspectionToolProvider implementation="inspections.MethodNamesProvider"/>

    </extensions>

    <actions>
    </actions>
</idea-plugin>